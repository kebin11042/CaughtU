<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imgvBackgroundBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#55002255"></LinearLayout>


        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/description"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="패턴을 입력해 주세요"
            android:textSize="12dp"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="0dp"></LinearLayout>

            <LinearLayout
                android:layout_weight="2.3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center">

                <com.eftimoff.patternview.PatternView
                    android:id="@+id/ptvBackround"
                    xmlns:patternview="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    patternview:gridSize="3"
                    patternview:circleColor="@color/patternCircle"
                    patternview:pathColor="@color/patternPath"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1.7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginRight="70dp"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@drawable/btn_back_1">

                    <LinearLayout
                        android:id="@+id/layBackgroundLoad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/btn_1"
                            android:layout_marginRight="3dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="배경화면 불러오기"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="13dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="70dp"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@drawable/btn_back_2">

                    <LinearLayout
                        android:id="@+id/layBackgroundApply"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/btn_2"
                            android:layout_marginRight="3dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="배경화면 적용하기"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="13dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="70dp"
                    android:layout_marginLeft="70dp"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@drawable/btn_back_3">

                    <LinearLayout
                        android:id="@+id/layBackgroundDefault"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/btn_3"
                            android:layout_marginRight="3dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="기본화면 적용하기"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="13dp"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>