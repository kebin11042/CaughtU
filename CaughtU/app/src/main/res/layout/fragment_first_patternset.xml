<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/description"/>

    <TextView
        android:id="@+id/txtvFirstPatternset"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="패턴을 입력해 주세요"
        android:textSize="12dp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        </LinearLayout>

        <LinearLayout
            android:layout_weight="2.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <com.eftimoff.patternview.PatternView
                android:id="@+id/ptvFirstSet"
                xmlns:patternview="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                patternview:gridSize="3"
                patternview:circleColor="@color/patternCircle"
                patternview:pathColor="@color/patternPath"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnFirstPatternOk"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:textSize="13dp"
                android:text="확인"
                android:textColor="#ffffff"
                android:background="@drawable/btn_confirm_selector"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>